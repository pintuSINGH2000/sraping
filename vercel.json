{
  "version": 2,
  "functions": {
    "api/**/*": {
      "runtime": "@vercel/python",
      "maxDuration": 5
    },
    "api/cron": {
      "runtime": "@vercel/python",
      "maxDuration": 60
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" }
  ],
  "crons": [
    {
      "path": "/api/cron",
      "schedule": "50 18 * * *"
    }
  ]
}
